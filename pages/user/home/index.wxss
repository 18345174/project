.container {
  padding: 20rpx;
}

.search-bar {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.search-bar input {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 48%;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.goods-item image {
  width: 100%;
  height: 300rpx;
}

.goods-info {
  padding: 20rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
}

.category-list {
  white-space: nowrap;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

.category-item:last-child {
  margin-right: 0;
}

.category-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-item text {
  font-size: 24rpx;
  color: #666;
}

.category-item.active text {
  color: #1296db;
} 