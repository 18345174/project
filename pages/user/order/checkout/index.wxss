.container {
  padding-bottom: 120rpx;
  background: #f5f5f5;
}

.delivery-section,
.address-section,
.goods-section,
.remark-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.radio-item {
  margin-right: 30rpx;
}

.address-content {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.address-info {
  flex: 1;
}

.user-info {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
}

.no-address {
  color: #999;
  font-size: 28rpx;
}

.arrow {
  color: #999;
  margin-left: 10rpx;
}

.goods-list {
  margin-top: 20rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.goods-price {
  color: #e4393c;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-quantity {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.remark-section textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.total-price {
  flex: 1;
  font-size: 28rpx;
}

.price {
  color: #e4393c;
  font-size: 36rpx;
  font-weight: bold;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
} 