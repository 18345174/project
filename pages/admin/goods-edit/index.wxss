.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.form-item input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-item textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.upload-placeholder .iconfont {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.submit-btn {
  margin-top: 60rpx;
  background: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
} 