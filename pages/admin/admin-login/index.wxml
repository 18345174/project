<view class="container">
  <view class="login-form">
    <view class="title">管理员登录</view>
    <view class="form-item">
      <input 
        type="text" 
        placeholder="请输入用户名" 
        bindinput="onUsernameInput"
        value="{{username}}"
      />
    </view>
    <view class="form-item">
      <input 
        type="password" 
        placeholder="请输入密码" 
        bindinput="onPasswordInput"
        value="{{password}}"
      />
    </view>
    <button class="login-btn" bindtap="handleLogin">登录</button>
  </view>
</view> 