.container {
  padding: 20rpx;
}

.goods-info {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.stock {
  font-size: 32rpx;
  color: #1296db;
  font-weight: bold;
}

.action-bar {
  margin: 20rpx 0;
}

.btn {
  background: #1296db;
  color: #fff;
  border-radius: 40rpx;
}

.stock-logs {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.log-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.log-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.type {
  font-size: 28rpx;
  color: #333;
}

.quantity {
  font-size: 28rpx;
  font-weight: bold;
}

.log-detail {
  font-size: 24rpx;
  color: #999;
}

.time {
  margin-right: 20rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.radio {
  margin-right: 30rpx;
}

.form-item input,
.form-item textarea {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-item textarea {
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-footer .btn {
  flex: 1;
}

.cancel {
  background: #f5f5f5;
  color: #333;
}

.confirm {
  background: #1296db;
  color: #fff;
} 