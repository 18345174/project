page {
  background: #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
}

button {
  margin: 0;
  padding: 0;
  background: none;
  border: none;
  text-align: left;
  line-height: inherit;
  border-radius: 0;
}

button::after {
  border: none;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
} 